<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Activity_payment">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="45dp"
        android:elevation="10dp"
        app:cardCornerRadius="5dp">

        <ImageView
            android:layout_width="280dp"
            android:layout_height="350dp"
           android:scaleType="fitCenter"
            android:layout_gravity="center"
            android:src="@drawable/qrcode" />
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:background="#2196F3">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="15sp"
            android:gravity="center"

            android:textColor="@color/white"
            android:drawableStart="@drawable/wallet_svgrepo_com"
            android:drawableEnd="@drawable/arrow_sm_right_svgrepo_com"
            android:text="Pay via Wallet"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:background="#2196F3">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="15sp"
            android:gravity="center"

            android:textColor="@color/white"
            android:drawableStart="@drawable/card_2_svgrepo_com"
            android:drawableEnd="@drawable/arrow_sm_right_svgrepo_com"
            android:text="Pay via Card"/>
    </LinearLayout>
</LinearLayout>